    private void hitungBmiActionPerformed(java.awt.event.ActionEvent evt) {                                          
    double tinggi = Double.parseDouble(this.tinggi.getText());
    double berat = Double.parseDouble(this.berat.getText());
    double BMIku = berat/(tinggi*tinggi);
    int usia = Integer.parseInt(umurKamu.getText());
    String hitungBmi = String.format("%.2f", BMIku);
    tampilBMI.setText(" "+hitungBmi);
    if(usia < 20 ){
	if(BMIku<18.5){
		tampilBMI.setOpaque(true);
		tampilBMI.setBackground(Color.yellow);
		JOptionPane.showMessageDialog(null, "Kurang Berat Badan");
	}else if(BMIku >= 18.5 && BMIku <25 ){
		tampilBMI.setOpaque(true);
		tampilBMI.setBackground(Color.green);
		JOptionPane.showMessageDialog(null, "Normal");
	}else if(BMIku >= 25 && BMIku <30 ){
		tampilBMI.setOpaque(true);
		tampilBMI.setBackground(Color.cyan);
		JOptionPane.showMessageDialog(null, "Kelebihan");
	}else if(BMIku >= 30 && BMIku <40 ){
		tampilBMI.setOpaque(true);
		tampilBMI.setBackground(Color.red);
		JOptionPane.showMessageDialog(null, "Obesitas");
	}else if(BMIku >= 40){ 
		tampilBMI.setOpaque(true);
		tampilBMI.setBackground(Color.darkGray);
		JOptionPane.showMessageDialog(null, "Sangat Obesitas");
	}
    }else if(usia >= 20 ){
	if(BMIku<18.5){
		tampilBMI.setOpaque(true);
		tampilBMI.setBackground(Color.yellow);
		JOptionPane.showMessageDialog(null, "Kurang Berat Badan Dari Usia");
	}else if(BMIku >= 18.5 && BMIku <25 ){
		tampilBMI.setOpaque(true);
		tampilBMI.setBackground(Color.green);
		JOptionPane.showMessageDialog(null, "Normal");
	}else if(BMIku >= 25 && BMIku <30 ){
		tampilBMI.setOpaque(true);
		tampilBMI.setBackground(Color.cyan);
		JOptionPane.showMessageDialog(null, "Kelebihan Berat Badan Dari Usia");
	}else if(BMIku >= 30 && BMIku <40 ){
		tampilBMI.setOpaque(true);
		tampilBMI.setBackground(Color.red);
		JOptionPane.showMessageDialog(null, "Obesitas Dari Usia");
	}else if(BMIku >= 40){ 
		tampilBMI.setOpaque(true);
		tampilBMI.setBackground(Color.darkGray);
		JOptionPane.showMessageDialog(null, "Sangat Obesitas");
	}
    } 
    }                                         

