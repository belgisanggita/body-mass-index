    private void ActionActionPerformed(java.awt.event.ActionEvent evt) {                                       
    this.removeAll();
    bmi = tampilBMI.getText();
    olahraga = tampilolahraga.getText();
    gender = Gender.getText();
    tinggi1 = tinggi.getText();
    berat1 = berat.getText();
    usia1 = umurKamu.getText();
    ACTION1 act = new ACTION1(bmi, olahraga, gender, tinggi1, berat1, usia1);
    act.setVisible(true);
    this.setVisible(false);
    this.add(act);
    }                                      

